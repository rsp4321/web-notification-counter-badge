{
  "name": "web-notification-counter-badge",
  "description": "Chrome extension that displays as badge the notification count of a web app",
  "version": "0.5",
  "manifest_version": 3,
  "action": {
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "scripts/inject-script.js" ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}